void loop() {
  unsigned int i = 0;
  unsigned int value = 0;
  unsigned int valueArray[1024] = {};
  startMillis = millis();
  while (millis() - startMillis < sampleWindow) {
    value = analogRead(mic);
    i += 1;
  }
  Serial.println(i);
}

